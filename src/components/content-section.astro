---
export interface Props {
  id?: string;
  title?: string;
  className?: string | string[];
}

const { title, id, className } = Astro.props;
const {slots} = Astro;
---

<section
  id={id}
  class:list={["flex scroll-mt-24 flex-col items-center gap-12 py-12 px-8 sm:first:pt-32", className]}
>
  {(title || slots.has('eyebrow')) && <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center font-extrabold tracking-tight text-7xl font-condensed"
    >
      {title}
    </h2>
  </div>}
  {slots.has('lead') && <div class="max-w-xl text-center font-extrabold text-2xl [&_strong]:text-primary">
    <slot name="lead" />
  </div>}
  <slot />
</section>
